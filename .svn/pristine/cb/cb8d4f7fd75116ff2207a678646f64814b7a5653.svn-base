<Window x:Class="bien4read.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bien4read"
        mc:Ignorable="d"
        Title="bien4read" Height="360" Width="626" Icon="1438601654_menu-24.ico">
    <Grid>
        <Button x:Name="btnPath" Content="경로선택" HorizontalAlignment="Left" Margin="432,10,0,0" VerticalAlignment="Top" Width="176" Click="btnPath_Click"/>
        <TextBox x:Name="tbPath" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="경로를선택하세요" VerticalAlignment="Top" Width="417" IsReadOnly="True"
                 Drop="tbPath_Drop" AllowDrop="True" PreviewDragEnter="tbPath_PreviewDragEnter" PreviewDragOver="tbPath_PreviewDragOver"
                 />
        <Button x:Name="btnChange" Content="변환" HorizontalAlignment="Left" Margin="432,288,0,0" VerticalAlignment="Top" Width="176" Click="btnChange_Click"/>
        <TextBox x:Name="tbMsg" HorizontalAlignment="Left" Height="272" Margin="10,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="417" IsReadOnly="True" AcceptsReturn="True"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="True"
                 />
        <GroupBox Header="Text" HorizontalAlignment="Left" Margin="432,43,0,0" VerticalAlignment="Top" Height="49" Width="176">
            <Grid HorizontalAlignment="Left">
                <Label x:Name="label_Copy1" Content="단락구분" HorizontalAlignment="Left" Margin="0,0,0,-3" VerticalAlignment="Top" Height="30"/>
                <TextBox x:Name="tbAddEmptyLine" HorizontalAlignment="Left" Height="23" Margin="63,2,-56,0" TextWrapping="Wrap" Text="10" VerticalAlignment="Top" Width="51" PreviewTextInput="NumericOnly" />
                <Label x:Name="label_Copy2" Content="줄 이상" HorizontalAlignment="Left" Margin="114,0,-106,-3" VerticalAlignment="Top" Height="30"/>

            </Grid>
        </GroupBox>
        <GroupBox Header="Image" HorizontalAlignment="Left" Margin="432,97,0,0" VerticalAlignment="Top" Height="122" Width="176">
            <Grid Height="Auto" VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>                   
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>                
                <CheckBox x:Name="ckSplit" Content="화면분할" Grid.Row="0" Grid.Column="0"  VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <ComboBox x:Name="cbSplit" Grid.Row="0" Grid.Column="2"  Margin="5" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                <Label x:Name="lbMarginUD" Content="상하여백" Grid.Row="1" Grid.Column="0" />
                <TextBox x:Name="tbMarginUD" Text="10" Grid.Row="1" Grid.Column="1" Margin="3" PreviewTextInput="NumericOnly"/>
                <Label x:Name="lbMarginLR" Content="좌우여백" Grid.Row="2" Grid.Column="0" />
                <TextBox x:Name="tbMarginLR" Text="10" Grid.Row="2" Grid.Column="1" Margin="3" PreviewTextInput="NumericOnly"/>
            </Grid>
        </GroupBox>

    </Grid>
</Window>
